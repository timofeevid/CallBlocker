<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Screener"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/widget_service_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service: Active âœ“"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/widget_blocking_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blocking: ON"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/widget_last_call_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last screened: 5m ago"
        android:textSize="11sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/widget_last_blocked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last blocked:\n+1234567890\nJan 15, 14:30"
        android:textSize="10sp"
        android:textColor="#FFCCCC"
        android:visibility="gone" />

</LinearLayout>